<odoo>
    <record id="view_customer_tree" model="ir.ui.view">
        <field name="name">hotel.customer.tree</field>
        <field name="model">hotel.customer</field>
        <field name="arch" type="xml">
            <tree default_order="name asc">
                <field name="name"/>
                <field name="identity_card"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>
    <record id="view_customer_form" model="ir.ui.view">
        <field name="name">hotel.customer.form</field>
        <field name="model">hotel.customer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>

                    <group>
                        <field name="identity_card"/>
                        <field name="phone"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_customer_search" model="ir.ui.view">
        <field name="name">hotel.customer.search</field>
        <field name="model">hotel.customer</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="phone"/>
                <field name="identity_card"/>
            </search>
        </field>
    </record>
</odoo>