<odoo>
    <!-- BOOKING -->
    <record id="action_booking" model="ir.actions.act_window">
        <field name="name">Đặt phòng</field>
        <field name="res_model">hotel.booking</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_booking_search"/>
    </record>
    <!-- CUSTOMER -->
    <record id="action_customer" model="ir.actions.act_window">
        <field name="name">Khách hàng</field>
        <field name="res_model">hotel.customer</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_customer_search"/>
    </record>
    <!-- ROOM -->
    <record id="action_room" model="ir.actions.act_window">
        <field name="name">Phòng</field>
        <field name="res_model">hotel.room</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- ROOM TYPE -->
    <record id="action_room_type" model="ir.actions.act_window">
        <field name="name">Loại phòng</field>
        <field name="res_model">hotel.room.type</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- SERVICE -->
    <record id="action_service" model="ir.actions.act_window">
        <field name="name">Dịch vụ</field>
        <field name="res_model">hotel.service</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
